<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One Stay</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<header>
    <div class="mainheader">
        <div class="container">
            <div class="row">
                <div class="logo">
                    <img src="/images/logo.png" alt="" height="49px" width="50px">
                    <h1>ONE STAY</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<section>
    

    <div class="container">
            <div class="row">
                <% if (success && success.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show"><%= success %></div>
                <% } %>
                <% if (listnotexist.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show"><%= listnotexist %></div>
                <% } %>

                <div class="newlistbrn">
                    <form action="/addnewlisting" method="get">
                        <Button>Add New Listing</Button>
                    </form>
                </div>
            </div>
        </div>
    <div class="container">
        <div class="row">
            <h3> All Listings </h3>
        </div>
        
        <div class="container">
            <div class="row">
            <% for(let list of listings) { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="listing/<%= list._id %>" style="text-decoration: none;">
                    
                        <div class="listcard">
                            <div class="listimg">
                                <img src="<%= list.image %>" alt="">
                            </div>
                            <div class="listcarddetails">
                                <h6><%= list.title %></h6>
                                <p><%= list.address %>, <b><%= list.country %></b></p>
                                <div class="towside">
                                    <div class="cardlistprice"><b>Price : â‚¬<%= list.price %></b></div>
                                    <div class="cardlistrate"><span class="fa fa-star checked"></span>  5.0</div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                
            <% } %>
            </div>
        </div>
    </div>
</section>
<%- include('includes/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>